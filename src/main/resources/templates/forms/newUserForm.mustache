{{>components/header}}

<h2 class="sign">Inscription</h2>

{{#errors}}
    <p class="error"><strong>Erreur:</strong>{{this}}</p>
{{/errors}}

<form action="/register" method="post">


    <label for="username">Nom d'utilisateur :</label>
    <input type="text" id="username" name="username" {{#user.username}}value="{{user.username}}"{{/user.username}} required>
    

    <label for="password">Mot de passe :</label>
    <input type="password" id="password" name="password" required>
    

    <label for="lastName">Nom :</label>
    <input type="text" id="lastName" name="lastName" {{#user.lastName}}value="{{user.lastName}}"{{/user.lastName}} required>
    

    <label for="firstName">Prénom :</label>
    <input type="text" id="firstName" name="firstName" {{#user.firstName}}value="{{user.firstName}}"{{/user.firstName}} required>
    

    <label for="email">Adresse email :</label>
    <input type="email" id="email" name="email" {{#user.email}}value="{{user.email}}"{{/user.email}} required>
    

    <label for="age">Âge :</label>
    <input type="number" id="age" name="age" {{#user.age}}value="{{user.age}}"{{/user.age}} required>
    

    <label for="gender">Genre :</label>
    <select id="gender" name="gender" required>
        <option value="Male" {{#user.gender}}selected{{/user.gender}}>Masculin</option>
        <option value="Female" {{#user.gender}}selected{{/user.gender}}>Féminin</option>
        <option value="Non-Binaire" {{#user.gender}}selected{{/user.gender}}>Non Binaire</option>
    </select>

    <label for="address">Adresse :</label>
    <input id="address" name="address" placeholder="5 rue des marcassins, 37000 Tours" value="{{#user.address}}{{.}}{{/user.address}}" required>

    <label for="pathology">Pathology :</label>
    <select id="pathology" name="pathology" required>
        {{#pathologies}}
            <option value="{{id}}" {{#user.pathology.id}}selected{{/user.pathology.id}}>{{label}}</option>
        {{/pathologies}}
    </select>


    <input type="submit" value="Enregistrer">
</form>

<div class="log">
    <a href="/login">Se connecter ?</a>
</div>

{{>components/footer}}