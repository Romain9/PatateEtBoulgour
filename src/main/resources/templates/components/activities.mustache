<script type="text/javascript" src="javascript/index.js"></script>

<div class="activities" id="activities">
{{#activities}}
    <div class="activity items" id="item">
    
        <a class="label" href="{{url}}" id="label">{{label}}</a>
        
        <p class="description">{{description}}</p>
        {{#user}}
            {{#selected}}
                <a class="activityAction removeActivity" href="/remove/{{id}}">Retirer activité</a>
            {{/selected}}
            {{^selected}}
                <a class="activityAction addActivity" href="/add/{{id}}">Ajouter activité</a>
            {{/selected}}
        {{/user}}
    </div>

{{/activities}}
{{^activities}}
    <h3>Aucune activité</h3>
{{/activities}}
</div>

{{#previousPage}}
    <a href="./{{previousPage}}">Précédente</a>
{{/previousPage}}

{{#nextPage}}
    <a href="./{{nextPage}}">Suivante</a>
{{/nextPage}}