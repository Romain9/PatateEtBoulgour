{{>components/header}}
{{#user}}


<div class="entetePr">
    <a class="adminBtn" href="/admin/utilisateurs-liste">Consulter la liste des utilisateurs</a>
    <a class="adminBtn" href="/admin/consulter-activités">Consulter la note moyenne des activités</a>
    <a class="adminBtn" href="/admin/consulter-parcours">Consulter la liste des parcours réalisés par les utilisateur</a>
</div>

<h1>Info sur {{firstName}} {{lastName}}</h1>

<ul class="details">
    <li>Nom: {{lastName}}</li>
    <li>Prénom: {{firstName}}</li>
    <li>Age: {{age}}</li>
    <li>Email: {{email}}</li>
    <li>Adresse: {{address}}</li>
    {{#pathology}}
        <li>Pathology: {{pathology.label}}</li>
    {{/pathology}}
    <li>
        Activités : {{^activities}}Aucune activité.{{/activities}}
        <ul>
            {{#activities}}
                <li>{{label}}</li>
            {{/activities}}
        </ul>
    </li>
</ul>

<h2 class="parc">Parcours notés :</h2>
<table>
    <thead>
    <tr>
        <th>Note</th>
        <th>Date</th>
        <th>Commentaire</th>
        <th>Activités</th>
    </tr>
    </thead>
    <tbody>
        {{#parcours}}
        <tr>
            <td>{{rating}}</td>
            <td>{{datetime}}</td>
            <td>{{commentaire}}</td>
            <td><ul>
                {{#activities}}
                    <li>{{label}}</li>
                {{/activities}}
            </ul></td>
        </tr>
    {{/parcours}}
    </tbody>
</table>
{{/user}}

{{>components/footer}}